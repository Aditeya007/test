# ======================================
# RAG CHATBOT - PRODUCTION ENVIRONMENT
# ======================================
# Configuration file for production deployment
# Replace all placeholder values with your actual production values

# ======================================
# ENVIRONMENT MODE
# ======================================
NODE_ENV=production

# ======================================
# MONGODB CONFIGURATION
# ======================================
# Use your production MongoDB instance
# Option 1: Local MongoDB on same server
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=rag_chatbot_prod
MONGO_URI=mongodb://localhost:27017/rag_chatbot_prod

# Option 2: MongoDB Atlas (Cloud) - Uncomment and use this instead:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/rag_chatbot_prod

# Updater database configuration
UPDATER_MONGODB_URI=mongodb://localhost:27017/
UPDATER_MONGODB_DATABASE=scraper_updater_prod

# Default database URI base
DEFAULT_DATABASE_URI_BASE=mongodb://localhost:27017

# ======================================
# SECURITY SECRETS - GENERATE NEW!
# ======================================
# CRITICAL: Generate NEW secrets using this command (run TWICE):
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

JWT_SECRET=GENERATE_NEW_SECRET_HERE
FASTAPI_SHARED_SECRET=GENERATE_DIFFERENT_SECRET_HERE

# ======================================
# GOOGLE GEMINI API KEY
# ======================================
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY_HERE

# ======================================
# PRODUCTION URLs
# ======================================
# Replace yourdomain.com with your actual domain

FASTAPI_BOT_URL=https://yourdomain.com/bot
DEFAULT_BOT_BASE_URL=https://yourdomain.com/bot
DEFAULT_SCHEDULER_BASE_URL=http://localhost:9000
DEFAULT_SCRAPER_BASE_URL=http://localhost:7000

# ======================================
# CORS ORIGIN
# ======================================
# Your production domain
CORS_ORIGIN=https://yourdomain.com

# ======================================
# SERVER CONFIGURATION
# ======================================
PORT=5000
PYTHON_BIN=python3

# ======================================
# VECTOR STORE PATHS
# ======================================
# Path relative to project root where tenant vector stores are created
# In production: /var/www/rag-chatbot/tenant-vector-stores
# This will be resolved from admin-backend's working directory
DEFAULT_VECTOR_BASE_PATH=./tenant-vector-stores

# ChromaDB paths (used by BOT and scraping services)
# These are absolute paths in production
CHROMA_DB_PATH=/var/www/rag-chatbot/BOT/chroma_db
CHROMA_COLLECTION_NAME=scraped_content

# ======================================
# LOGGING
# ======================================
SCRAPER_LOG_LEVEL=INFO
UPDATER_LOG_LEVEL=INFO
